<h1 class="fw-bold">Carrito de Compras</h1>

<div class="container my-5">
    {{#if cart}}
    <div class="list-group">
        {{#each cart}}
        <div class="list-group-item d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <img src="{{this.product.thumbnails.[0]}}" onerror="this.onerror=null;this.src='/img/item.png';"
                    alt="{{this.product.title}}" class="img-thumbnail" style="width: 100px;">
                <div class="ms-3">
                    <h5 class="mb-1">{{this.product.title}}</h5>
                    <p class="mb-1">Cantidad: {{this.quantity}}</p>
                    <p class="mb-0">Precio unitario: ${{this.product.price}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <div class="alert alert-info text-center" role="alert">
        El carrito está vacío.
    </div>
    {{/if}}

    <div class="mt-4 text-end">
        <a href="/products" class="btn btn-primary">Volver al catálogo</a>
    </div>
</div>